# Password reset token validity (minutes)
AUTH_PASSWORD_RESET_EXPIRE=60

# Email verification link validity (minutes)
AUTH_VERIFICATION_EXPIRE=60

# CORS: comma-separated frontend origins (Vite default 5173, React 3000)
